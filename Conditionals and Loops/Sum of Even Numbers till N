import java.util.Scanner;
public class Solution {


	public static void main(String[] args) {
		
	Scanner s = new Scanner(System.in);
		int n = s.nextInt();
		int se= 0;
		for (int i=1; i<=n; i++) {
			
			if (i%2 == 0) {
				
			se = se + i;
			
				
			}
			
			}
		
		System.out.println(se);

		
	}

}
